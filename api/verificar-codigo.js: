export default function handler(req, res) {
  if (req.method !== "POST") {
    return res.status(405).json({ mensaje: "M茅todo no permitido" });
  }

  const { codigo } = req.body;

  const codigos = {
  "TFTF01": " 10% de regalo",
  "TFTF02": " 200 fichas extra",
  "TFTF03": " Sin premio, suerte la pr贸xima",
  "TFTF04": " Sin premio, suerte la pr贸xima",
  "TFTF05": " 隆Premio especial 50% extra!"

  };

  if (!codigo) {
    return res.status(400).json({ mensaje: "C贸digo vac铆o" });
  }

  const premio = codigos[codigo.toUpperCase()];

  if (premio) {
    return res.status(200).json({ premio });
  } else {
    return res.status(404).json({ mensaje: "C贸digo inv谩lido. Prob谩 con otro." });
  }
}
